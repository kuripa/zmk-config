#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/rgb.h>

/ {
    combos {
        compatible = "zmk,combos";

        gui {
            bindings = <&kp LEFT_GUI>;
            key-positions = <19 20 19 20>;
            layers = <0>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // -------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  |   BKSP    |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |    '      |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | SHFT(RET) |
            //                         | ALT | LWR | SPC | RSE  | ALT |

            bindings = <
&kp TAB         &kp Q  &kp W  &kp E     &kp R  &kp T             &kp Y  &kp U  &kp I      &kp O    &kp P     &kp BSPC
&kp LEFT_SHIFT  &kp A  &kp S  &kp D     &kp F  &kp G             &kp H  &kp J  &kp K      &kp L    &kp SEMI  &mt RSHIFT ENTER
&kp LCTRL       &kp Z  &kp X  &kp C     &kp V  &kp B             &kp N  &kp M  &kp COMMA  &kp DOT  &kp FSLH  &trans
                              &kp LALT  &mo 2         &kp SPACE         &mo 1  &kp RGUI
            >;
        };

        symbol_layer {
            // ----------------------------------------------------------------------------
            // |    |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | DEL |
            // |    |  -  |  =  |  [  |  ]  |  \  |   | F1  | F2  | F3  | F4  | F5  | F6  |
            // |    | ESC | GUI | ALT | CAPS|  "  |   | F7  | F8  | F9  | F10 | F11 | F12 |
            //                       |     | ADJ | BKSP |    |     |

            bindings = <
&kp TILDE  &kp EXCL   &kp AT            &kp HASH         &kp DOLLAR             &kp PERCENT                   &kp DOUBLE_QUOTES  &kp AMPERSAND  &kp STAR      &kp UNDER  &kp EQUAL  &kp DEL
&trans     &kp TILDE  &kp SINGLE_QUOTE  &kp LEFT_BRACE   &kp LEFT_PARENTHESIS   &kp LEFT_BRACKET              &kp PLUS           &sk LEFT_ALT   &sk LEFT_GUI  &sk LCTRL  &trans     &trans
&trans     &trans     &trans            &kp RIGHT_BRACE  &kp RIGHT_PARENTHESIS  &kp RIGHT_BRACKET             &kp PIPE           &kp MINUS      &kp EQUAL     &trans     &trans     &trans
                                        &trans           &mo 3                                     &kp ENTER                     &trans         &trans
            >;
        };

        num_layer {
            bindings = <
&trans  &trans  &trans     &kp ESC   &trans    &trans             &trans         &kp N7  &kp N8  &kp N9  &trans  &trans
&trans  &trans  &sk LCTRL  &sk LGUI  &sk LALT  &trans             &kp N0         &kp N1  &kp N2  &kp N3  &trans  &trans
&trans  &trans  &trans     &trans    &trans    &trans             &kp BACKSPACE  &kp N4  &kp N5  &kp N6  &trans  &trans
                           &trans    &trans            &kp ENTER                 &mo 3   &trans
            >;
        };

        nav_layer {
            // ------------------------------------------------------------------------------------
            // |    |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  |      DEL    |
            // |    |  _  |  +  |  {  |  }  | "|" |   | LFT | DWN |  UP | RGT |  `  |       ~     |
            // |    | ESC | GUI | ALT | CAPS|  "  |   | HOME| END | PGUP| PGDN| PRSC| SHFT(SPACE) |
            //                       |     |     | RET | ADJ |     |

            bindings = <
&trans  &trans  &trans     &kp ESCAPE  &trans        &trans          &trans         &kp HOME       &kp END      &trans     &trans     &kp DEL
&trans  &trans  &sk LCTRL  &sk LGUI    &sk LEFT_ALT  &trans          &kp LEFT       &kp DOWN       &kp UP       &kp RIGHT  &trans     &trans
&trans  &trans  &trans     &caps_word  &trans        &trans          &kp BACKSPACE  &kp PAGE_DOWN  &kp PAGE_UP  &trans     &kp PSCRN  &trans
                           &trans      &trans                &trans                 &trans         &trans
            >;
        };

        function_layer {
            bindings = <
&kp F1  &kp F2            &kp F3      &kp F4      &kp F5      &kp F6              &kp F7      &kp F8      &kp F9      &kp F10     &kp F11     &kp F12
&trans  &kp LG(NUMBER_1)  &kp LG(N2)  &kp LG(N3)  &kp LG(N4)  &kp LG(N5)          &kp LG(N6)  &kp LG(N7)  &kp LG(N8)  &kp LG(N9)  &kp LG(N0)  &mo 5
&trans  &trans            &trans      &trans      &trans      &trans              &trans      &trans      &trans      &trans      &trans      &trans
                                      &trans      &trans                  &trans              &trans      &trans
            >;
        };

        adjust_layer {
            // -----------------------------------------------------------------------------------------
            // | RGB BRI+ | RGB SAT+ | RGB HUE+ | RGB ANI+ |    | RGB TOG |   |  BT1  | BT2 | BT3 | BT4 | BT5 | BT CLR |
            // | RGB BRI- | RGB SAT- | RGB HUE- | RGB ANI- |    |         |   |       |     |     |     |     |        |
            // |          |          |          |          |    |         |   | RESET |     |     |     |     |        |
            //                                              |     |     |     |     |     |

            bindings = <
&rgb_ug RGB_BRI  &rgb_ug RGB_SAI  &rgb_ug RGB_HUI  &rgb_ug RGB_EFF  &none   &rgb_ug RGB_TOG          &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4  &bt BT_CLR
&rgb_ug RGB_BRD  &rgb_ug RGB_SAD  &rgb_ug RGB_HUD  &rgb_ug RGB_EFR  &none   &none                    &none         &none         &none         &none         &none         &none
&none            &none            &none            &none            &none   &none                    &sys_reset    &none         &none         &none         &none         &none
                                                   &trans           &trans                   &tog 5                &trans        &trans
            >;
        };
    };
};
